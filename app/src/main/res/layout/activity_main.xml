<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- High Score Display -->
    <TextView
        android:id="@+id/highScoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="High Score: 0"
        android:textSize="20sp"
        android:textColor="#FFD700"
        android:fontFamily="@font/roboto_bold"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"/>
    <!-- Score and Timer Container -->
    <LinearLayout
        android:layout_below="@id/highScoreTextView"
        android:id="@+id/scoreContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:background="@drawable/score_background"
        android:padding="16dp"
        android:elevation="8dp"
        android:gravity="center">

        <TextView
            android:id="@+id/scoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score: 0"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/roboto_bold"
            android:padding="8dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>

        <View
            android:layout_width="16dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 180"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/roboto_bold"
            android:padding="8dp"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>
    </LinearLayout>



    <!-- Start Button -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:textSize="18sp"
        android:padding="16dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:elevation="8dp"/>

    <!-- Frog Image -->
    <ImageView
        android:id="@+id/frogImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        android:src="@drawable/frog_image"
        android:elevation="12dp"
        android:shadowColor="#80000000"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="8"/>

    <!-- Star Image -->
    <ImageView
        android:id="@+id/starImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="invisible"
        android:src="@drawable/star_image"
        android:elevation="10dp"
        android:shadowColor="#80000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="6"/>

    <!-- Pee Image -->
    <ImageView
        android:id="@+id/peeImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="invisible"
        android:src="@drawable/pee_image"
        android:elevation="10dp"
        android:shadowColor="#80000000"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="6"/>

</RelativeLayout>